{
  "manifest_version": 3,
  "name": "CanIGoIn",
  "version": "3.0.0",
  "description": "Network monitoring, clickfix detection, YouTube channel whitelist, extension monitoring",
  "permissions": [
    "webRequest",
    "webNavigation",
    "storage",
    "scripting",
    "tabs",
    "unlimitedStorage",
    "management",
    "declarativeNetRequest",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube-blocker.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://chatgpt.com/*", "*://*.chatgpt.com/*"],
      "js": ["chatgpt-file-upload.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["page-context-clipboard.js", "chatgpt-fetch-intercept.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
